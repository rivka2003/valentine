    .scene-container {
      width: 100%;
      height: 300px;
      position: relative;
    }
    
    .click-instruction {
      position: absolute;
      top: 50px;
      left: 50%;
      transform: translateX(-50%);
      color: #FF1493;
      font-size: 18px;
      text-align: center;
      animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
      0%, 100% { transform: translateX(-50%) scale(1); }
      50% { transform: translateX(-50%) scale(1.1); }
    }
    
    .envelope {
      cursor: pointer;
    }
    
    .message {
      display: none;
      background: white;
      padding: 30px;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(255, 20, 147, 0.3);
      width: 80%;
